<?xml version="1.0" encoding="utf-8"?>
<com.app.hinh.manager3gdata.util.HeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/header_view_end_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/last_seen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@android:color/white" />

    </LinearLayout>
    <Button
        android:id="@+id/btOnOff"
        android:layout_gravity="right"
        android:background="@drawable/vien_tron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClicked"
        android:text="TurnOn"/>


</com.app.hinh.manager3gdata.util.HeaderView>